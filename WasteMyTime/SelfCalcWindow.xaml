                            <Ellipse Canvas.Left="15.0" Canvas.Top="16.0" Width="2.0" Height="2.0" Fill="#ff000000"/>
                        </Canvas>
                        <Canvas UseLayoutRounding="False">
                            <Path Fill="#ff000000">
