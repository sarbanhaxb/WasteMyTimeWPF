                                    <PathGeometry Figures="M 16 7 V 8 H 10 V 7 h 6 M 17 6 H 16 H 10 H 9 v 1 v 1 v 1 h 1 h 6 h 1 V 8 V 7 Z" FillRule="Nonzero"/>
                                </Path.Data>
                            </Path>
                        </Canvas>
                    </Canvas>
                </Canvas>
            </Viewbox>
        </Button>

        <DataGrid x:Name="WasteDataGrid" Grid.Row="1" CanUserAddRows="False" IsReadOnly="False" Margin="5 0" Padding="5 0" AutoGenerateColumns="False" SelectedCellsChanged="WasteDataGrid_SelectedCellsChanged" CellEditEnding="WasteDataGrid_CellEditEnding">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Код ФККО" Width="1.4*" Binding="{Binding Path=FKKOcode}" ElementStyle="{StaticResource WrapText}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Наименование отхода" Width="5.8*" Binding="{Binding Path=Title}" ElementStyle="{StaticResource WrapText}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Норматив образования" Width="2*" Binding="{Binding Path=Normative}" IsReadOnly="False"/>
            </DataGrid.Columns>
            
        </DataGrid>
        <StackPanel x:Name="CalcPanel" Grid.Column="1" Grid.Row="1"/>

    </Grid>
</Window>
