                            </Canvas>
                        </Canvas>
                    </Canvas>
                </Canvas>
            </Viewbox>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button Grid.Column="0"
