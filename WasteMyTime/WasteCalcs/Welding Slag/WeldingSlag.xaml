<Window x:Class="WasteMyTime.WasteCalcs.WeldingSlag"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WasteMyTime.WasteCalcs"
        mc:Ignorable="d"
        Title="Шлак сварочный" Height="400" Width="600" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>


        <DataGrid AutoGenerateColumns="False" Name="dataGrid1" Margin="5" Grid.Row="1" CanUserAddRows="False" CellEditEnding="dataGrid1_CellEditEnding" >
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Марка электрода" Width="1*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding ElectrodeBrand}" Margin="3"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <TextBox Text="{Binding ElectrodeBrand, UpdateSourceTrigger=PropertyChanged}" Margin="3"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Масса электродов, т" Width="1*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Quantity}" Margin="3"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <TextBox Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}" Margin="3"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Норматив" Width="1*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ComboBox ItemsSource="{Binding Normative}" 
          SelectedItem="{Binding SelectedNormative, UpdateSourceTrigger=PropertyChanged}" 
          Margin="3" Width="100" HorizontalAlignment="Center" 
          SelectionChanged="ComboBox_SelectionChanged" x:Name="ComboboxI"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Масса шлака, т" Width="1*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Mass}" Margin="3"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button Height="23" HorizontalAlignment="Left" Name="AddNewRow" Click="AddNewRow_Click" VerticalAlignment="Center" Width="125" Grid.Row="2" Margin="5">
            Добавить позицию
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button Height="23" HorizontalAlignment="Left" x:Name="DelRow" VerticalAlignment="Center" Width="125" Content="Удалить позицию" Click="DelRow_Click" Grid.Row="2" Margin="135 5 5 5">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>


        <Menu x:Name="MainMenu" Width="Auto" Grid.Row="0">
            <MenuItem Header="О программе" Click="AboutMethodClick"/>
        </Menu>
        <Button Content="Button" HorizontalAlignment="Left" Margin="482,66,0,0" Grid.RowSpan="2" Grid.Row="2" VerticalAlignment="Top" Click="Button_Click"/>
    </Grid>
    <Window.Resources>
        <Style TargetType="Border">
            <Setter Property="CornerRadius" Value="5"/>
        </Style>
    </Window.Resources>
</Window>
