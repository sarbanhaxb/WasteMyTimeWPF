<Window x:Class="WasteMyTime.WindowBDO"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WasteMyTime"
        xmlns:vm="clr-namespace:WasteMyTime.ViewModel"
        mc:Ignorable="d"
        Title="WindowBDO" Height="800" Width="Auto" ResizeMode="CanResizeWithGrip" WindowState="Maximized"
        >
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        
    </Window.Resources>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBox Grid.Row="0" Margin="10" Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}" 
                 />

        <DataGrid Grid.Row="1" ItemsSource="{Binding BDOItemsView}" AutoGenerateColumns="True"/>
    </Grid>
</Window>
